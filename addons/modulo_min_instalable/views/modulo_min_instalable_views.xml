<odoo>
    <record id="view_modulo_min_instalable_form" model="ir.ui.view">
        <field name="name">modulo.min.instalable.form</field>
        <field name="model">modulo.min.instalable</field>
        <field name="arch" type="xml">
            <form string="Módulo Mínimo Instalable">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_modulo_min_instalable" model="ir.actions.act_window">
        <field name="name">Módulo Mínimo Instalable</field>
        <field name="res_model">modulo.min.instalable</field>
        <field name="view_mode">form</field>
    </record>

    <menuitem id="menu_modulo_min_instalable" name="Módulo Mínimo Instalable"
              parent="base.menu_custom" action="action_modulo_min_instalable"/>
</odoo>
