    <menuitem name="Menu 1" id="mi_modulo_scaffold.menu_1" parent="mi_modulo_scaffold.menu_root"/>
    <menuitem name="Menu 2" id="mi_modulo_scaffold.menu_2" parent="mi_modulo_scaffold.menu_root"/>
