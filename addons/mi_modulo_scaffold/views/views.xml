    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="mi_modulo_scaffold.list">
      <field name="name">mi_modulo_scaffold list</field>
      <field name="model">mi_modulo_scaffold.mi_modulo_scaffold</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="mi_modulo_scaffold.action_window">
      <field name="name">mi_modulo_scaffold window</field>
      <field name="res_model">mi_modulo_scaffold.mi_modulo_scaffold</field>
      <field name="view_mode">tree,form</field>
    </record>

